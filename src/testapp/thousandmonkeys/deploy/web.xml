<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>Thousand Monkeys Test Application</display-name>
    <description>
        A non-interactive test to randomly evaluate the Echo2 engine.
    </description>

    <servlet>
      <servlet-name>ThousandMonkeysServlet</servlet-name>
      <servlet-class>nextapp.echo2.testapp.thousandmonkeys.ThousandMonkeysServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>ThousandMonkeysServlet</servlet-name>
      <url-pattern>/app</url-pattern>
    </servlet-mapping>

</web-app>
